             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:XelerateAvalonia.ViewModels"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="vm:ImportPageViewModel"
             mc:Ignorable="d">

	<!-- Set DataContext to the ViewModel -->
	<UserControl.DataContext>
		<vm:ImportPageViewModel />
	</UserControl.DataContext>
	<TextBlock FontSize="76">Hello</TextBlock>
	<!-- Bind TextBlock text to a property in the ViewModel -->

</UserControl>
